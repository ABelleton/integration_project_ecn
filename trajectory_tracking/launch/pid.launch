<launch>
    <arg name="plcPath" default="/dev/ttyACM0"/>
    <param name="plcPath" value="$(arg plcPath)"/>

    <!-- NODES -->

    <node name="pid_node"  pkg="trajectory_tracking"  type="pid_controller" output="screen" required="true">
        <param name="plcPath" value="$(arg plcPath)"/>
    </node>

</launch>